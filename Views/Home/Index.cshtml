@model TodoViewModel
<div class="row justify-content-center">
    <div class="col-xl-8 col-lg-8 col-md-8 col-sm-20">
        <table class="table">
            <thead>
                <tr class="table-primary">
                    <th scope="col">Id</th>
                    <th scope="col">Task Name</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model.TodoList)
                {
                    <tr>
                        <th class="todos-column" scope="row">@t.Id</th>
                        <td class="todos-column">@t.Name</td>
                        <td class="todos-column">
                            @if (t.IsComplete)
                            {
                                <input type="checkbox" disabled="disabled" checked/>
                            }
                            else
                            {
                                <input type="checkbox" disabled="disabled" />
                            }
                        </td> 
                        <td class="buttons-column">
                            @if (t.IsComplete)
                            {
                                <input type="submit" class="btn btn-primary" value="Undone" onClick="toggleStatus(@t.Id)" />
                            }
                            else
                            {
                                <input type="submit" class="btn btn-primary" value="Done" onClick="toggleStatus(@t.Id)" />
                            }

                            <input type="submit" class="btn btn-secondary" value="Update Task Name" onClick="populateForm(@t.Id)" />
                            <input type="submit" class="btn btn-danger" value="Delete" onClick="deleteTodo(@t.Id)" />
                           
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
